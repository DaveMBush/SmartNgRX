generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model departments {
  id       String    @id @default(uuid())
  location locations @relation(fields: [locationId], references: [id])
  locationId    String
  name          String
  version       Int             @default(1)
  sprintFolders sprintFolders[]
  lists         lists[]
  folders       folders[]
  docs          docs[]
  created      DateTime    @default(now())
}

model docs {
  did          String      @id @default(uuid())
  department   departments @relation(fields: [departmentId], references: [id])
  departmentId String
  name         String
  version      Int         @default(1)
  created      DateTime    @default(now())
}

model folders {
  id           String      @id @default(uuid())
  department   departments @relation(fields: [departmentId], references: [id])
  departmentId String
  name         String
  version      Int         @default(1)
  created      DateTime    @default(now())
}

model lists {
  id           String      @id @default(uuid())
  department   departments @relation(fields: [departmentId], references: [id])
  departmentId String
  name         String
  version      Int         @default(1)
  created      DateTime    @default(now())
}

model locations {
  id          String        @id @default(uuid())
  name        String
  version     Int           @default(1)
  departments departments[]
  created      DateTime    @default(now())
}

model sprintFolders {
  id           String      @id @default(uuid())
  department   departments @relation(fields: [departmentId], references: [id])
  departmentId String
  name         String
  version      Int         @default(1)
  created      DateTime    @default(now())
}
