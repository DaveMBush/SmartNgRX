{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["./tsconfig.*?.json"]
      },
      "rules": {
        // we need to spit out information to the console as part of this app.
        "no-console": "off",
        // turns off the Promise restriction because MemLab uses Promises
        "no-restricted-syntax": "off",
        // we don't care about anonymous function for memlab
        "@smarttools/no-anonymous-functions": "error"
      },
      "extends": [
        "plugin:@nx/angular",
        "plugin:@angular-eslint/template/process-inline-templates"
      ]
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@nx/angular-template"],
      "rules": {}
    }
  ]
}
