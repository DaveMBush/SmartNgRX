{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@ng-doc/generated": ["ng-doc/documentation/index.ts"],
      "@ng-doc/generated/*": ["ng-doc/documentation/*"],
      "@smarttools/e2e-common": ["libs/e2e-common/src/index.ts"],
      "@smarttools/smart-core": ["libs/smart-core/src/index.ts"],
      "@smarttools/smart-ngrx": ["libs/smart-ngrx/src"],
      "@smarttools/smart-signals": ["libs/smart-signals/src"],
      "@smarttools/smart-signals/testing": ["libs/smart-signals/src/testing.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
